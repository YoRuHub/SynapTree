{
    "name": "synaptree",
    "displayName": "SynapTree",
    "description": "3D File System Visualization",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "synaptree-sidebar",
                    "title": "SynapTree",
                    "icon": "$(circuit-board)"
                }
            ]
        },
        "views": {
            "synaptree-sidebar": [
                {
                    "type": "webview",
                    "id": "synaptree-view",
                    "name": "SynapTree Explorer"
                }
            ]
        },
        "commands": [
            {
                "command": "synaptree.visualize",
                "title": "SynapTree: Visualize Structure"
            },
            {
                "command": "synaptree.refresh",
                "title": "SynapTree: Refresh Graph",
                "icon": "$(refresh)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "synaptree.refresh",
                    "when": "view == synaptree-view",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "SynapTree",
            "properties": {
                "synaptree.colors.directory": {
                    "type": "string",
                    "default": "#ff00ff",
                    "description": "Color for directory nodes (Magenta/Soma)"
                },
                "synaptree.colors.defaultFile": {
                    "type": "string",
                    "default": "#00ffff",
                    "description": "Fallback color for file nodes (Cyan)"
                },
                "synaptree.colors.extensions": {
                    "type": "object",
                    "default": {
                        ".swift": "#ffac45",
                        ".ts": "#3178c6",
                        ".js": "#f7df1e",
                        ".html": "#e34f26",
                        ".css": "#1572b6",
                        ".json": "#f5cb5c",
                        ".md": "#9b51e0"
                    },
                    "description": "Mapping of file extensions to node colors"
                },
                "synaptree.visuals.activeColor": {
                    "type": "string",
                    "default": "#ffff00",
                    "description": "Global active link highlight color"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.44.0",
        "typescript": "^5.1.3"
    }
}