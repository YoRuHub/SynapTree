{
    "name": "synaptree",
    "displayName": "SynapTree",
    "description": "3D File System Visualization",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "synaptree-sidebar",
                    "title": "SynapTree",
                    "icon": "$(circuit-board)"
                }
            ]
        },
        "views": {
            "synaptree-sidebar": [
                {
                    "type": "webview",
                    "id": "synaptree-view",
                    "name": "SynapTree Explorer",
                    "icon": "$(circuit-board)"
                }
            ]
        },
        "commands": [
            {
                "command": "synaptree.visualize",
                "title": "%synaptree.command.visualize%"
            },
            {
                "command": "synaptree.refresh",
                "title": "%synaptree.command.refresh%",
                "icon": "$(refresh)"
            },
            {
                "command": "synaptree.openSettings",
                "title": "%synaptree.command.openSettings%",
                "icon": "$(gear)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "synaptree.refresh",
                    "when": "view == synaptree-view",
                    "group": "navigation@1"
                },
                {
                    "command": "synaptree.openSettings",
                    "when": "view == synaptree-view",
                    "group": "navigation@2"
                }
            ]
        },
        "configuration": {
            "title": "%synaptree.config.title%",
            "properties": {
                "synaptree.colors.directory": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#ff00ff",
                    "description": "%synaptree.config.colors.directory%"
                },
                "synaptree.colors.defaultFile": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#00ffff",
                    "description": "%synaptree.config.colors.defaultFile%"
                },
                "synaptree.colors.extensions": {
                    "type": "object",
                    "markdownDescription": "%synaptree.config.colors.extensions%",
                    "additionalProperties": {
                        "type": "string",
                        "format": "color-hex"
                    },
                    "default": {
                        ".swift": "#ffac45",
                        ".ts": "#3178c6",
                        ".js": "#f7df1e",
                        ".html": "#e34f26",
                        ".css": "#1572b6",
                        ".json": "#f5cb5c",
                        ".md": "#9b51e0",
                        ".py": "#3776ab",
                        ".go": "#00add8",
                        ".rs": "#ce412b",
                        ".kt": "#7f52ff"
                    }
                },
                "synaptree.visuals.activeColor": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#ffff00",
                    "description": "%synaptree.config.visuals.activeColor%"
                },
                "synaptree.visuals.normalOpacity": {
                    "type": "number",
                    "default": 0.2,
                    "description": "%synaptree.config.visuals.normalOpacity%"
                },
                "synaptree.visuals.particleSpeed": {
                    "type": "number",
                    "default": 0.005,
                    "description": "%synaptree.config.visuals.particleSpeed%"
                },
                "synaptree.visuals.particleWidth": {
                    "type": "number",
                    "default": 3.0,
                    "description": "%synaptree.config.visuals.particleWidth%"
                },
                "synaptree.general.language": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "en",
                        "ja"
                    ],
                    "default": "auto",
                    "description": "%synaptree.config.general.language%"
                },
                "synaptree.general.ignorePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "node_modules",
                        ".git",
                        "out",
                        "dist",
                        ".vscode-test",
                        "target",
                        "bin",
                        ".DS_Store"
                    ],
                    "description": "%synaptree.config.general.ignorePatterns%"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.44.0",
        "typescript": "^5.1.3"
    }
}