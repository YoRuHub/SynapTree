{
    "name": "synaptree",
    "displayName": "SynapTree",
    "description": "Visualize your workspace in a 3D interactive graph.",
    "version": "0.0.8",
    "icon": "resources/logo.jpg",
    "publisher": "YoRuHub",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/YoRuHub/SynapTree.git"
    },
    "keywords": [
        "3d",
        "visualization",
        "filesystem",
        "graph",
        "productivity",
        "file-explorer"
    ],
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Visualization",
        "Other"
    ],
    "extensionDependencies": [
        "vscode.git"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "synaptree-sidebar",
                    "title": "SynapTree",
                    "icon": "$(circuit-board)"
                }
            ]
        },
        "views": {
            "synaptree-sidebar": [
                {
                    "type": "webview",
                    "id": "synaptree-view",
                    "name": "SynapTree Explorer",
                    "icon": "$(circuit-board)"
                }
            ]
        },
        "commands": [
            {
                "command": "synaptree.visualize",
                "title": "%synaptree.command.visualize%"
            },
            {
                "command": "synaptree.refresh",
                "title": "%synaptree.command.refresh%",
                "icon": "$(refresh)"
            },
            {
                "command": "synaptree.openSettings",
                "title": "%synaptree.command.openSettings%",
                "icon": "$(gear)"
            },
            {
                "command": "synaptree.search",
                "title": "%synaptree.command.search%",
                "icon": "$(search)"
            },
            {
                "command": "synaptree.hideLabels",
                "title": "%synaptree.command.hideLabels%",
                "icon": "$(eye)"
            },
            {
                "command": "synaptree.showLabels",
                "title": "%synaptree.command.showLabels%",
                "icon": "$(eye-closed)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "synaptree.search",
                    "when": "view == synaptree-view",
                    "group": "navigation@0"
                },
                {
                    "command": "synaptree.hideLabels",
                    "when": "view == synaptree-view && synaptree:labelsVisible",
                    "group": "navigation@1"
                },
                {
                    "command": "synaptree.showLabels",
                    "when": "view == synaptree-view && !synaptree:labelsVisible",
                    "group": "navigation@1"
                },
                {
                    "command": "synaptree.refresh",
                    "when": "view == synaptree-view",
                    "group": "navigation@2"
                },
                {
                    "command": "synaptree.openSettings",
                    "when": "view == synaptree-view",
                    "group": "navigation@3"
                }
            ]
        },
        "configuration": {
            "title": "%synaptree.config.title%",
            "properties": {
                "synaptree.general.autoFocus": {
                    "type": "boolean",
                    "default": false,
                    "description": "%synaptree.config.general.autoFocus%"
                },
                "synaptree.general.language": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "en",
                        "ja"
                    ],
                    "default": "auto",
                    "description": "%synaptree.config.general.language%"
                },
                "synaptree.general.ignorePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "node_modules",
                        ".*",
                        "out",
                        "dist",
                        "target",
                        "bin",
                        "build",
                        "coverage",
                        "Pods",
                        "DerivedData",
                        "__pycache__",
                        "venv",
                        "env",
                        "obj",
                        "vendor",
                        "tmp",
                        "temp"
                    ],
                    "description": "%synaptree.config.general.ignorePatterns%"
                },
                "synaptree.visuals.particleSpeed": {
                    "type": "number",
                    "default": 0.005,
                    "description": "%synaptree.config.visuals.particleSpeed%"
                },
                "synaptree.visuals.particleWidth": {
                    "type": "number",
                    "default": 3.0,
                    "description": "%synaptree.config.visuals.particleWidth%"
                },
                "synaptree.visuals.normalOpacity": {
                    "type": "number",
                    "default": 0.2,
                    "description": "%synaptree.config.visuals.normalOpacity%"
                },
                "synaptree.visuals.activeColor": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#ffff00",
                    "description": "%synaptree.config.visuals.activeColor%"
                },
                "synaptree.colors.root": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#ffffff",
                    "description": "Color for the root node"
                },
                "synaptree.colors.directory": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#0088ff",
                    "description": "%synaptree.config.colors.directory%"
                },
                "synaptree.colors.defaultFile": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#aaaaaa",
                    "description": "%synaptree.config.colors.defaultFile%"
                },
                "synaptree.colors.extensions": {
                    "type": "object",
                    "markdownDescription": "%synaptree.config.colors.extensions%",
                    "additionalProperties": {
                        "type": "string",
                        "format": "color-hex"
                    },
                    "default": {
                        ".swift": "#ffac45",
                        ".ts": "#3178c6",
                        ".js": "#f7df1e",
                        ".html": "#e34f26",
                        ".css": "#1572b6",
                        ".json": "#f5cb5c",
                        ".md": "#9b51e0",
                        ".py": "#3776ab",
                        ".go": "#00add8",
                        ".rs": "#ce412b",
                        ".kt": "#7f52ff"
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "publish:ovsx": "./scripts/publish-ovsx.sh"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.44.0",
        "typescript": "^5.1.3"
    }
}